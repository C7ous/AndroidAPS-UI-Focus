<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graphs_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/bg_graph"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:contentDescription="@string/a11y_graph" />

        <LinearLayout
            android:gravity="end"
            android:id="@+id/loop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp" >

            <Button
                android:id="@+id/scale_button"
                android:layout_width="46dp"
                android:layout_height="27dp"
                android:layout_marginEnd="18dp"
                android:backgroundTint="#1F1F1F"
                android:contentDescription="@string/a11y_graph_scale"
                android:drawableEnd="@drawable/ic_arrow_drop_down_white_24dp"
                android:padding="0dp"
                android:textAllCaps="false" />

            <ImageButton
                android:layout_marginTop="-2dp"
                android:id="@+id/chart_menu_button"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:backgroundTint="#1F1F1F"
                android:contentDescription="@string/chart_menu"
                app:srcCompat="@drawable/ic_arrow_drop_down_white_24dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iob_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>